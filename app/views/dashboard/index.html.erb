<div class="container my-5">
    <h1>Coffee's Charts.</h1>
    <div class="my-5">
        <h3>Graphic of month's incomes (last 12 months)</h3>
        <%= column_chart @sales_group_by_month %>
    </div>
    
    <div class="my-5">
        <h3>Graphic of month's sales quantity (last 12 months)</h3>
        <%= column_chart @sales_group_by_month_count %>
    </div>
    
    <div class="my-5">
        <h3>Graphic of the average month's sales (last 12 months)</h3>
        <%= column_chart @sales_group_by_month_average %>
    </div>
    
    <div class="my-5">
        <h3>Pie chart with the sales quantity according to the coffee origin</h3>
        <h4>Last 12 months</h4>
        <%= pie_chart @sales_count_by_origin_12m %>
        <h4>Last 6 months</h4>
        <%= pie_chart @sales_count_by_origin_6m %>
        <h4>Last 3 months</h4>
        <%= pie_chart @sales_count_by_origin_3m %>
        <h4>last month</h4>
        <%= pie_chart @sales_count_by_origin_1m %>
    </div>
    
    <div class="my-5">
        <h3>Pie chart with the sales quantity according to the blend of coffee</h3>
        <h4>Last 12 months</h4>
        <%= pie_chart @sales_count_by_blend_12m %>
        <h4>Last 6 months</h4>
        <%= pie_chart @sales_count_by_blend_6m %>
        <h4>Last 3 months</h4>
        <%= pie_chart @sales_count_by_blend_3m %>
        <h4>last month</h4>
        <%= pie_chart @sales_count_by_blend_1m %>
    </div>
</div>
